{
  "manifest_version": 2,
  "name": "ToDo Trello Chrome Extension",
  "description": "Controlador de tarefas integrado ao trello",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://*.trello.com/*"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  }
}